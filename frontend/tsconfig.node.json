{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "composite": true,
    "noEmit": false,

    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,

    "types": ["node"]
  },
  "include": ["vite.config.ts", "vite.config.*.ts", "vitest.config.ts"]
}
