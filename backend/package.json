{
  "name": "@lyceum64/backend",
  "version": "0.1.0",
  "description": "Backend API for Lyceum 64 preparation platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:backup": "tsx scripts/backup-db.ts create",
    "db:backup:list": "tsx scripts/backup-db.ts list",
    "db:backup:restore": "tsx scripts/backup-db.ts restore",
    "db:backup:scheduled": "tsx scripts/scheduled-backup.ts",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "security:generate-secret": "node ../scripts/generate-jwt-secret.js",
    "security:check": "npm run security:audit && npm outdated"
  },
  "dependencies": {
    "@lyceum64/shared": "*",
    "@prisma/client": "^5.8.0",
    "@types/express-session": "^1.18.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "validator": "^13.15.26",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/validator": "^13.15.10",
    "@types/ws": "^8.5.10",
    "prisma": "^5.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
