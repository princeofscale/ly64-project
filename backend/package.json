{
  "name": "@lyceum64/backend",
  "version": "0.1.0",
  "description": "Backend API for Lyceum 64 preparation platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "echo \"No tests yet\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:backup": "tsx scripts/backup-db.ts create",
    "db:backup:list": "tsx scripts/backup-db.ts list",
    "db:backup:restore": "tsx scripts/backup-db.ts restore",
    "db:backup:scheduled": "tsx scripts/scheduled-backup.ts",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "security:generate-secret": "node ../scripts/generate-jwt-secret.js",
    "security:check": "npm run security:audit && npm outdated"
  },
  "dependencies": {
    "@lyceum64/shared": "*",
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@types/express-session": "^1.18.2",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "validator": "^13.15.26",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/hpp": "^0.2.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.1.0",
    "@types/validator": "^13.15.10",
    "@types/ws": "^8.18.1",
    "prisma": "^7.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
